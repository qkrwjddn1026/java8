package sec3;

public class Loop6 {

	public static void main(String[] args) {
		int tot=0;
		for(int i=0;i<=100;i++){
			if(i%2==1) continue;
			tot+=i;
		}
		System.out.println("0~100짝수의 합계 : "+tot );
		//i+=2    ==   i=i+2
		tot = 0;
		for(int i=0;i<=100;i+=2){
			tot+=i;
		}
		System.out.println("0~100짝수의 합계2 : "+ tot);
		tot=0;
		for(int i=1;i<=100;i+=2){
			tot+=i;
		}
		System.out.println("0~100 홀수의 합계 : "+ tot);
		int n=1;
		for(int i=1;i<=100;i+=2){
			tot+=i;
		}

	}

}
