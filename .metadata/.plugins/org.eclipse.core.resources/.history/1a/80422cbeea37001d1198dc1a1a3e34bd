package sec1;

public class MemberContoller {
	Member mem = new Member();
	boolean log = false;
	
	public void join(String id, String password, String name){
		mem.setId(id);
		mem.setPassword(password);
		mem.setName(name);
	}
	
	
	public void login(String id, String password, String name){
		if(mem.getId().equals(id) && mem.getPassword().equals(password));
		log = true;
		System.out.println(id+"님이 로그인 되었습니다.");
	} else {
		log = false;
		System.out.println("로그인이 실패 되었습니다.");
	}
	
}
