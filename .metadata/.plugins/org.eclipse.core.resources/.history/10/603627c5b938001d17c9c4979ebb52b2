package sec2;

public class Student {
	String name;
	int kor;
	int eng;
	int mat;
	int tot=kor+eng+mat;
	double avg = (double)tot/3;
	String hak;
	
	public Student(){};
	public Student(String name){
		this.name=name;
	};
	public Student(String name, int kor,int eng,int mat){
		this.name=name;  this.kor=kor;
		this.eng=eng;  this.mat=mat;
	}
	
       public int calcTot(int tot){
    	   return this.tot;		
	}
       public double calcAvg(double avg){
    	   return this.avg;
    }
       public String calcHak(String hak){
    	   if(this.avg>=90){
    		   System.out.println("A");
    	   } else if(this.avg>=80){
    		   System.out.println("B");
    	   } else if(this.avg>=70){
    		   System.out.println("C");
    	   } else if(this.avg<70){
    		   System.out.println("D");
    	   }
    	   
       }
	
	
}
